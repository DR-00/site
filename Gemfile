gem "minima", "~> 2.5"

# Essential plugins
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"
  gem "jekyll-sitemap"
  gem "jekyll-paginate"
  gem "jekyll-seo-tag"
end

# Required for Ruby 3.0+
gem "webrick", "~> 1.7"
